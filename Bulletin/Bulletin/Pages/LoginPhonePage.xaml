<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bulletin.Pages.LoginPhonePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LoginPhonePage"
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}"/>
            <Entry Placeholder="SMS Code" Text="{Binding Password}" IsVisible="{Binding CodeSent}"/>
            <Button Text="{Binding ButtonText}" Command="{Binding NextCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>