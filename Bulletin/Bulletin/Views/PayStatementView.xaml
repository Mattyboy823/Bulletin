<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bulletin.Views.PayStatementView"
             xmlns:views="clr-namespace:Bulletin.Views">
    <ContentView.Content>
        <Frame Padding="0" CornerRadius ="3" BackgroundColor="White" HasShadow="True">
            <StackLayout Orientation="Horizontal">
                <views:StatementEarningsView WidthRequest="120" Earnings="{Binding Earnings}"/>
                <StackLayout HorizontalOptions="FillAndExpand">
                    <views:HoursProgressView Current="{Binding TotalHours}" HeightRequest="20" BarColor="LightGray" FillColor="{StaticResource PrimaryHeaderColor}"/>
                    <Label Text="{Binding PayRange}" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
                <Label Text="{Binding Date}" HorizontalOptions="StartAndExpand"/>
            </StackLayout>
        </Frame>
        
    </ContentView.Content>
</ContentView>